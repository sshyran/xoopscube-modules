<?xml version="1.0" encoding="utf-8" ?>
<cubson-dynaactionform>
	<form-bean name="PostEditForm" type="XCube_ActionForm">
		<form-property name="post_id" type="Int" />
		<form-property name="uid" type="Int" />
		<form-property name="guest_name" type="String" />
		<form-property name="p_id" type="Int" />
		<form-property name="topic_id" type="Int" />
		<form-property name="bodytext" type="Text" />
		<form-property name="reg_unixtime" type="Int" />
	</form-bean>
	<form-validation>
		<field property="post_id" depends="required">
			<arg0 key="const._MD_BIZFORUM_LANG_POST_ID" />
			<msg name="required" key="const._MD_BIZFORUM_ERROR_REQUIRED" />
		</field>
		<field property="uid" depends="required">
			<arg0 key="const._MD_BIZFORUM_LANG_UID" />
			<msg name="required" key="const._MD_BIZFORUM_ERROR_REQUIRED" />
		</field>
		<field property="guest_name" depends="required,maxlength">
			<arg0 key="const._MD_BIZFORUM_LANG_GUEST_NAME" />
			<msg name="required" key="const._MD_BIZFORUM_ERROR_REQUIRED" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._MD_BIZFORUM_ERROR_MAXLENGTH" />
			<var name="maxlength" value="16" />
		</field>
		<field property="p_id" depends="required">
			<arg0 key="const._MD_BIZFORUM_LANG_P_ID" />
			<msg name="required" key="const._MD_BIZFORUM_ERROR_REQUIRED" />
		</field>
		<field property="topic_id" depends="required">
			<arg0 key="const._MD_BIZFORUM_LANG_TOPIC_ID" />
			<msg name="required" key="const._MD_BIZFORUM_ERROR_REQUIRED" />
		</field>
		<field property="bodytext" depends="required">
			<arg0 key="const._MD_BIZFORUM_LANG_BODYTEXT" />
			<msg name="required" key="const._MD_BIZFORUM_ERROR_REQUIRED" />
		</field>
		<field property="reg_unixtime" depends="required">
			<arg0 key="const._MD_BIZFORUM_LANG_REG_UNIXTIME" />
			<msg name="required" key="const._MD_BIZFORUM_ERROR_REQUIRED" />
		</field>
	</form-validation>
</cubson-dynaactionform>

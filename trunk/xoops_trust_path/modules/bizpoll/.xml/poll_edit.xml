<?xml version="1.0" encoding="utf-8" ?>
<cubson-dynaactionform>
	<form-bean name="PollEditForm" type="XCube_ActionForm">
		<form-property name="poll_id" type="Int" />
		<form-property name="enq_id" type="Int" />
		<form-property name="uid" type="Int" />
		<form-property name="name" type="String" />
		<form-property name="choice_id" type="Int" />
		<form-property name="ip" type="String" />
		<form-property name="comment" type="Text" />
		<form-property name="reg_unixtime" type="Int" />
	</form-bean>
	<form-validation>
		<field property="poll_id" depends="required">
			<arg0 key="const._MD_BIZPOLL_LANG_POLL_ID" />
			<msg name="required" key="const._MD_BIZPOLL_ERROR_REQUIRED" />
		</field>
		<field property="enq_id" depends="required">
			<arg0 key="const._MD_BIZPOLL_LANG_ENQ_ID" />
			<msg name="required" key="const._MD_BIZPOLL_ERROR_REQUIRED" />
		</field>
		<field property="uid" depends="required">
			<arg0 key="const._MD_BIZPOLL_LANG_UID" />
			<msg name="required" key="const._MD_BIZPOLL_ERROR_REQUIRED" />
		</field>
		<field property="name" depends="required,maxlength">
			<arg0 key="const._MD_BIZPOLL_LANG_NAME" />
			<msg name="required" key="const._MD_BIZPOLL_ERROR_REQUIRED" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._MD_BIZPOLL_ERROR_MAXLENGTH" />
			<var name="maxlength" value="32" />
		</field>
		<field property="choice_id" depends="required">
			<arg0 key="const._MD_BIZPOLL_LANG_CHOICE_ID" />
			<msg name="required" key="const._MD_BIZPOLL_ERROR_REQUIRED" />
		</field>
		<field property="ip" depends="required,maxlength">
			<arg0 key="const._MD_BIZPOLL_LANG_IP" />
			<msg name="required" key="const._MD_BIZPOLL_ERROR_REQUIRED" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._MD_BIZPOLL_ERROR_MAXLENGTH" />
			<var name="maxlength" value="255" />
		</field>
		<field property="comment" depends="required">
			<arg0 key="const._MD_BIZPOLL_LANG_COMMENT" />
			<msg name="required" key="const._MD_BIZPOLL_ERROR_REQUIRED" />
		</field>
		<field property="reg_unixtime" depends="required">
			<arg0 key="const._MD_BIZPOLL_LANG_REG_UNIXTIME" />
			<msg name="required" key="const._MD_BIZPOLL_ERROR_REQUIRED" />
		</field>
	</form-validation>
</cubson-dynaactionform>

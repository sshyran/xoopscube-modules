<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE feed [
  <!ENTITY lt "&#38;#60;">
  <!ENTITY gt "&#62;">
  <!ENTITY amp "&#38;#38;">
  <!ENTITY apos "&#39;">
  <!ENTITY quot "&#34;">
  <!ENTITY nbsp "&#160;">
  <!ENTITY copy "&#169;">
]>
<feed xmlns="http://www.w3.org/2005/Atom">
	<title type="text"><{$feed.title}></title>
	<subtitle type="text"><{$feed.subtitle}></subtitle>
	<updated><{$feed.modified}></updated>
	<id><{$feed.tag_url}></id>
	<link rel="alternate" type="text/xhtml" hreflang="<{$feed.lang}>" href="<{$feed.link}>" />
	<link rel="self" type="application/atom+xml" href="<{$feed.link_self}>" />
	<rights><{$feed.meta_copyright}></rights>
	<generator uri="<{$feed.link}>"><{$feed.generator}></generator>
<{foreach item=entry from=$entries}>
	<entry>
		<title><{$entry.title}></title>
		<link rel="alternate" type="text/xhtml" href="<{$entry.link}>" />
		<id><{$entry.tag_url}></id>
		<published><{$entry.issued}></published>
		<updated><{$entry.modified}></updated>
		<category term="<{$entry.category}>" label="<{$entry.category}>" />
		<author>
			<name><{$entry.blogger}></name>
		</author>
		<summary type="html" xml:base="<{$feed.link}>" xml:lang="<{$feed.lang}>"><{$entry.excerpt}></summary>
<{* d3pipes doesn't capture a content element with a name space
       <content type="xhtml" xml:lang="<{$feed.lang}>" xml:base="<{$feed.link}>">
         <div xmlns="http://www.w3.org/1999/xhtml">
			<{$entry.contents}>
         </div>
       </content>*}>
<{* d3pipes needs this content tag element to show details. *}>
       <content type="html" xml:lang="<{$feed.lang}>" xml:base="<{$feed.link}>">
<![CDATA[<div><{$entry.contents}></div>]]>
       </content>
	</entry>
<{/foreach}>
</feed>

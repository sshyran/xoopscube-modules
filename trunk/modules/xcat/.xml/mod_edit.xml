<?xml version="1.0" encoding="utf-8" ?>
<cubson-dynaactionform>
	<form-bean name="ModEditForm" type="XCube_ActionForm">
		<form-property name="mod_id" type="Int" />
		<form-property name="gr_id" type="Int" />
		<form-property name="mid" type="Int" />
		<form-property name="dir_name" type="String" />
		<form-property name="weight" type="Int" />
		<form-property name="option" type="Text" />
	</form-bean>
	<form-validation>
		<field property="mod_id" depends="required">
			<arg0 key="const._MD_XCAT_LANG_MOD_ID" />
			<msg name="required" key="const._MD_XCAT_ERROR_REQUIRED" />
		</field>
		<field property="gr_id" depends="required">
			<arg0 key="const._MD_XCAT_LANG_GR_ID" />
			<msg name="required" key="const._MD_XCAT_ERROR_REQUIRED" />
		</field>
		<field property="mid" depends="required">
			<arg0 key="const._MD_XCAT_LANG_MID" />
			<msg name="required" key="const._MD_XCAT_ERROR_REQUIRED" />
		</field>
		<field property="dir_name" depends="required,maxlength">
			<arg0 key="const._MD_XCAT_LANG_DIR_NAME" />
			<msg name="required" key="const._MD_XCAT_ERROR_REQUIRED" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._MD_XCAT_ERROR_MAXLENGTH" />
			<var name="maxlength" value="150" />
		</field>
		<field property="weight" depends="required">
			<arg0 key="const._MD_XCAT_LANG_WEIGHT" />
			<msg name="required" key="const._MD_XCAT_ERROR_REQUIRED" />
		</field>
		<field property="option" depends="required">
			<arg0 key="const._MD_XCAT_LANG_OPTION" />
			<msg name="required" key="const._MD_XCAT_ERROR_REQUIRED" />
		</field>
	</form-validation>
</cubson-dynaactionform>

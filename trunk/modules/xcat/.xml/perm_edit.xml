<?xml version="1.0" encoding="utf-8" ?>
<cubson-dynaactionform>
	<form-bean name="PermEditForm" type="XCube_ActionForm">
		<form-property name="perm_id" type="Int" />
		<form-property name="cat_id" type="Int" />
		<form-property name="uid" type="Int" />
		<form-property name="groupid" type="Int" />
		<form-property name="permissions" type="Text" />
	</form-bean>
	<form-validation>
		<field property="perm_id" depends="required">
			<arg0 key="const._MD_XCAT_LANG_PERM_ID" />
			<msg name="required" key="const._MD_XCAT_ERROR_REQUIRED" />
		</field>
		<field property="cat_id" depends="required">
			<arg0 key="const._MD_XCAT_LANG_CAT_ID" />
			<msg name="required" key="const._MD_XCAT_ERROR_REQUIRED" />
		</field>
		<field property="uid" depends="required">
			<arg0 key="const._MD_XCAT_LANG_UID" />
			<msg name="required" key="const._MD_XCAT_ERROR_REQUIRED" />
		</field>
		<field property="groupid" depends="required">
			<arg0 key="const._MD_XCAT_LANG_GROUPID" />
			<msg name="required" key="const._MD_XCAT_ERROR_REQUIRED" />
		</field>
		<field property="permissions" depends="required">
			<arg0 key="const._MD_XCAT_LANG_PERMISSIONS" />
			<msg name="required" key="const._MD_XCAT_ERROR_REQUIRED" />
		</field>
	</form-validation>
</cubson-dynaactionform>

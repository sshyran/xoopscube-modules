<?xml version="1.0" encoding="utf-8" ?>
<cubson-dynaactionform>
	<form-bean name="GrEditForm" type="XCube_ActionForm">
		<form-property name="gr_id" type="Int" />
		<form-property name="gr_title" type="String" />
		<form-property name="level" type="Int" />
		<form-property name="actions" type="Text" />
	</form-bean>
	<form-validation>
		<field property="gr_id" depends="required">
			<arg0 key="const._MD_XCAT_LANG_GR_ID" />
			<msg name="required" key="const._MD_XCAT_ERROR_REQUIRED" />
		</field>
		<field property="gr_title" depends="required,maxlength">
			<arg0 key="const._MD_XCAT_LANG_GR_TITLE" />
			<msg name="required" key="const._MD_XCAT_ERROR_REQUIRED" />
			<arg1 name="maxlength" key="${var:maxlength}" />
			<msg name="maxlength" key="const._MD_XCAT_ERROR_MAXLENGTH" />
			<var name="maxlength" value="255" />
		</field>
		<field property="level" depends="required">
			<arg0 key="const._MD_XCAT_LANG_LEVEL" />
			<msg name="required" key="const._MD_XCAT_ERROR_REQUIRED" />
		</field>
		<field property="actions" depends="required">
			<arg0 key="const._MD_XCAT_LANG_ACTIONS" />
			<msg name="required" key="const._MD_XCAT_ERROR_REQUIRED" />
		</field>
	</form-validation>
</cubson-dynaactionform>
